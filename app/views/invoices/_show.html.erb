<div class='invoice_show'>
	<%= render :partial => 'invoices/print_preview', :locals => { :invoice => invoice } %>

	<% if local_variables.include?( :preview ) %>
	<%= link_to 'Click to Print This Page', 'javascript:window.print()' %>
	<% else %>
	<%= link_to 'Edit', edit_invoice_path(invoice), :remote => true, :id => "invoice_edit_#{invoice.id}" %>
	<%= link_to 'Send Mail', send_mail_invoice_path(invoice), :remote => true, :class => 'invoice_send_mail' %>
	<%= link_to 'Send SMS', send_sms_invoice_path(invoice), :remote => true, :class => 'invoice_send_sms' %>
	<%= link_to 'Print Preview', print_preview_invoice_path(invoice), :class => 'invoice_send_sms', :target=> "_blank" %>
	<% end %>
</div>
<div class='invoice_edit'></div>
